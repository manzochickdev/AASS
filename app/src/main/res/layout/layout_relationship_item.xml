<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"></import>
        <variable
            name="isEdit"
            type="Boolean"></variable>
        <variable
            name="viewModel"
            type="com.example.tuananh.module1.AddEditDetail.RelaViewModel"></variable>
    </data>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/curved_rect">
                <LinearLayout
                    android:visibility="@{viewModel.visible ? View.VISIBLE : View.GONE}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:clickable="@{viewModel.mode!=2}"
                            android:onClick="@{()->viewModel.onModeChange(1)}"
                            android:id="@+id/iv_profile"
                            android:layout_marginRight="12dp"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />
                        <TextView
                            android:layout_centerVertical="true"
                            android:text="@{viewModel.modelRela.model.name}"
                            android:id="@+id/tv_name"
                            android:layout_toLeftOf="@id/iv_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:clickable="@{viewModel.mode!=2}"
                            android:onClick="@{()->viewModel.onModeChange(0)}"
                            android:id="@+id/tv_relationship"
                            android:layout_marginLeft="28dp"
                            android:layout_centerVertical="true"
                            android:padding="4dp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/curved_accent"
                            android:text="@{viewModel.modelRela.relationship != null ? viewModel.modelRela.relationship : @string/relationshipHolder}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:onClick="@{()->viewModel.handleRemove()}"
                            android:visibility="@{viewModel.edit ? View.VISIBLE : View.GONE}"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_remove_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <FrameLayout
                        mode="@{viewModel.mode}"
                        onDataHandle="@{viewModel.onHandler}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </FrameLayout>
                    <LinearLayout
                        android:visibility="@{viewModel.mode!=2 ? View.VISIBLE : View.GONE}"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:onClick="@{()->viewModel.handleFinish(0)}"
                            android:id="@+id/tv_cancel"
                            android:text="Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:onClick="@{()->viewModel.handleFinish(1)}"
                            android:id="@+id/tv_ok"
                            android:layout_marginLeft="12dp"
                            android:text="OK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:onClick="@{()->viewModel.addModelRela()}"
                    android:visibility="@{!viewModel.visible ? View.VISIBLE : View.GONE}"
                    android:id="@+id/btn_add"
                    android:layout_margin="4dp"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="+ Add Relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>